<%- include("../partials/header.ejs") %>

<div class="container mt-3">
    <form action="" method="POST" enctype="multipart/form-data">
        <% if (message) { %>
        <div class="alert alert-danger">
            <%= message %>    
        </div>
        <% } %>
        <div class="form-group text-light">
            <label for="title">Bleet Title</label>
            <input type="text" class="form-control text-light bg-dark border-dark" name="title" id="title">
        </div>
        <div class="form-group text-light">
            <label for="title">Bleet</label>
            <textarea class="form-control text-light bg-dark border-dark" name="description" id="description" rows="20"></textarea>
        </div>
        <div class="form-group text-light">
            <label for="title">Bleet Image (Optional)</label>
            <input type="file" class="form-control-file text-light bg-dark border-dark" name="bleeter_img" id="bleeter_img" />
        </div>
        <div class="form-group float-right">
            <a href="/bleeter" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-success">Create Bleet</button>
        </div>
    </form>
</div>