<%- include("../../partials/header.ejs") %>

<div class="container-fluid">
  <div class="row">
    <%- include("../../partials/admin-header.ejs") %>


    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 text-light mt-2">
      <form
      class="mt-2"
      action=""
      method="post"
      enctype="application/x-www-form-urlencoded"
    >
    <h1 class="card-title">Edit Vehicle</h1>
      <div class="form-group">
        <label for="exampleInputEmail1" class="text-light"
          >Enter Vehicle Name</label
        >
        <input
          name="cname"
          type="text"
          class="form-control  text-light bg-dark border-dark "
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          placeholder="Car Name"
          value="<%= vehicle.cname %>"
        />
      </div>

      <button type="submit" class="btn btn-success float-right">Update</button>
      <a href="/admin/vehicles" class="cancel-btn btn btn-danger float-right">Cancel</a>
    </form>
    </main>
    
  </div>
</div>
