<%- include("../../partials/header.ejs") %>
<div class="container-fluid">
  <div class="row">
    <%- include("../../partials/admin-header.ejs") %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 text-light mt-2">
      <form
        class="mt-2 text-light"
        action=""
        method="post"
        enctype="application/x-www-form-urlencoded"
      >
      <h1 class="card-title">Edit Department</h1>
        <div class="form-group">
          <label for="exampleInputEmail1">Enter Department</label>
          <input
            name="dept"
            type="text"
            class="form-control text-light border-dark bg-dark"
            placeholder="Department"
            value="<%= department.name %>"
          />
        </div>
        <button type="submit" class="btn btn-success float-right">
          Update Department
        </button>
        <a
          class="btn btn-danger cancel-btn float-right"
          href="/admin/departments"
          >Cancel</a
        >
      </form>
    </main>
  </div>
</div>
