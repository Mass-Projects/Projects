<%- include("../../partials/header.ejs") %>
<div class="container-fluid">
  <div class="row">
    <%- include("../../partials/admin-header.ejs") %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 text-light mt-2">
      <div class="container mt-2">
        <form
          action=""
          method="post"
          enctype="application/x-www-form-urlencoded"
        >
        <h1 class="card-title">Add Department</h1>
          <div class="form-group">
            <label for="first-name" class="text-light">Add Department</label>
            <input
              type="text"
              class="form-control text-light border-dark bg-dark"
              name="dept"
              id="first-name"
              placeholder="Department"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary float-right">
            Add Department
          </button>
          <a
            class="btn btn-danger cancel-btn float-right"
            href="/admin/departments"
            >Cancel</a
          >
        </form>
      </div>
    </main>
  </div>
</div>
