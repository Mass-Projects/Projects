<%- include("../../partials/header.ejs") %>
<div class="container-fluid">
  <div class="row">
    <%- include("../../partials/admin-header.ejs") %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 text-light mt-2">
      <form
        class="mt-2"
        action=""
        method="post"
        enctype="application/x-www-form-urlencoded"
      >
      <h1 class="card-title">Edit Ethnicity</h1>
        <div class="form-group">
          <label for="exampleInputEmail1" class="text-light"
            >Enter Ethnicity</label
          >
          <input
            name="ethnicity"
            type="text"
            class="form-control text-light bg-dark border-dark"
            placeholder="Ethnicity"
            value="<%= ethnicity.name %>"
          />
        </div>
        <button type="submit" class="btn btn-success float-right">
          Update
        </button>
        <a href="/admin/ethnicities" class="btn btn-danger cancel-btn float-right">Cancel</a>
      </form>
    </main>
  </div>
</div>
