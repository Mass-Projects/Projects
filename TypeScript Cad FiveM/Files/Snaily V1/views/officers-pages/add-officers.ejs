<%- include("../partials/header.ejs") %>

<form
  class="container mx-auto mt-3 text-light"
  action=""
  method="post"
  enctype="application/x-www-form-urlencoded"
>
  <div class="form-group">
    <label for="name">Officer Name</label>
    <input
      type="text"
      name="officer_name"
      value="<%= req.params.first_name %> <%= req.params.last_name %>"
      class="form-control text-light border-dark bg-dark"
      id="name"
      aria-describedby="emailHelp"
      required
    />
  </div>
  <div class="form-group">
    <label for="dept">Officer Dept</label>
    <select
      type="text"
      name="dept"
      class="form-control text-light border-dark bg-dark"
      id="dept"
      required
    >
    <% if (depts.length > 0) { %>
      <% depts.forEach(dept => { %>
        <option value="<%= dept.name %>"><%= dept.name %></option>
     <% }) %>
    </select>
  </div>
  <a href="/officers/myofficers" class="btn cancel-btn btn-danger"
  >Cancel</a
  >
  <button type="submit" class="btn btn-primary">Add Officer</button>
    <% } else { %>
      <option value="">This CAD doesn't have any departments set up, please contact your community staff.</option>
    </select>
  </div>
  <a href="/officers/myofficers" class="btn cancel-btn btn-danger"
  >Cancel</a
  >
  <button type="submit" class="btn btn-primary" disabled>Add Officer</button>
  <% } %>
</form>
