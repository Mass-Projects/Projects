<%- include("../partials/header.ejs") %>

<div class="container">
  <h1 class="card-title text-center mt-3 text-light">Penal Codes</h1>

  <ul class="list-group mt-2" id="myUL">
    <a href="/officers/dash" class="btn btn-primary text-light"
      >Police Dashboard</a
    >
    <input
      type="text"
      id="myInput"
      class="list-group-item mt-2 text-light bg-dark"
      onkeyup="search()"
      placeholder="Search by Title or Description.."
    />
    <% penalCodes.forEach(penal => { %>

    <li href="#" class="list-group-item mt-2 text-light bg-dark">
      <h5 class="bolder"><%= penal.title %></h5>
      <p class="mb-1"><%- penal.des %></p>
    </li>

    <% }) %>
  </ul>
</div>
<div class="mb-4"></div>

<script>
  function search() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById('myInput');
    filter = input.value.toUpperCase();
    ul = document.getElementById('myUL');
    li = ul.getElementsByTagName('li');
    for (i = 0; i < li.length; i++) {
      a = li[i];
      txtValue = a.textContent || a.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        li[i].style.display = '';
      } else {
        li[i].style.display = 'none';
      }
    }
  }
</script>
