<%- include("../partials/header.ejs") %>

<div class="container mx-auto">
  <h1 class="card-title text-center mt-3 text-light">EMS/FD</h1>
  <ul class="list-group">
    <a href="/ems-fd/dash" class="btn btn-primary mt-1">EMS-FD Dashboard</a>
    <a href="/ems-fd/add-deputy" class="btn btn-primary mt-1">Add EMS Deputy</a>

    <% if (ems.length > 0) { %> <% ems.forEach((ems_fd, index) => { %>
      <li class="list-group-item mt-2 text-light bg-dark">
        <form
          class="text-light bg-dark cap"
          action="/ems-fd/update-status/<%= ems_fd.id %>"
          method="post"
        >
          <%= ++index %> | <%= ems_fd.name %>
          <div class="float-right">
            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">
              &thinsp; Status:</label
            >
            <select
              id="status2"
              class="custom-select my-1 mr-sm-2 text-light bg-dark"
              name="status2"
              id="inlineFormCustomSelectPref"
            >
              <option
                class="text-light bg-dark"
                selected
                value="<%= ems_fd.status2 %>"
                ><%= ems_fd.status2 %>
              </option>
              <option class="text-light bg-dark" value="">New Status..</option>
              <option class="text-light bg-dark" value="10-42 | 10-7">10-42 | 10-7</option>
              <option class="text-light bg-dark" value="10-6">10-6</option>
              <option class="text-light bg-dark" value="10-5">10-5</option>
              <option class="text-light bg-dark" value="10-12">10-12</option>
              <option class="text-light bg-dark" value="10-97">10-97</option>
              <option class="text-light bg-dark" value="10-11">10-11</option>
              <option class="text-light bg-dark" value="Signal 11"
                >Signal 11</option
              >
              <option class="text-light bg-dark" value="Code 5">Code 5</option>
            </select>
            <a href="/ems-fd/delete/<%= ems_fd.id %>" class="btn btn-danger">Delete Current Deputy</a>
            <button type="submit" class="btn btn-success">Change Status</button>
          </div>
        </form>
        <p>
          <span class="bolder"> Current Status:</span> <%= ems_fd.status %>
          <span class="bolder">-</span> <%= ems_fd.status2 %>
        </p>
      </li>
    <% }) %> <% } else { %>
    <li class="list-group-item text-light bg-dark mt-2">
      You Don't have any EMS deputies. Create one <a href="/ems-fd/add-deputy">here</a>
    </li>
    <% } %>
  </ul>
</div>
